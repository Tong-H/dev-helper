{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "esnext", // 注意这里的编译环境
    "module": "NodeNext",
    "strict": true,
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__",
    "**/*.(spec|test).ts",
  ]
}